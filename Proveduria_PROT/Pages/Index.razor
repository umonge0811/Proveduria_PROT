@page "/"
@inject IJSRuntime js

<PageTitle>Index</PageTitle>

<AuthorizeView>
    <Authorized>
       <h1>Bienvenido, @context.User.Identity.Name!</h1>
    </Authorized>
    <NotAuthorized>
        <h1>Hola,Usuario Invitado</h1>
    </NotAuthorized>
</AuthorizeView>


Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<AuthorizeView>
    <Authorized>
        <br /><br />
        <button class="btn btn-outline-primary" @onclick="DisplayGreetingAlert">Alerta de Bienvenida</button>
    </Authorized>
</AuthorizeView>

@code
{
    [CascadingParameter]
    private Task<AuthenticationState> authenticationState { get; set; }
    private async Task DisplayGreetingAlert()
    {
        var authState = await authenticationState;
        var message = $"Hola {authState.User.Identity.Name}";
        js.InvokeVoidAsync("alert", message);

    }

}