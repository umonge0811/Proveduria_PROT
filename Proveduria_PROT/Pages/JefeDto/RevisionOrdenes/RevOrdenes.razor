@page "/revordenes"
@attribute [Authorize(Roles = "Jefe Departamento,Aprobador")]
@inject NavigationManager navManager

<link href="~/Pages/NuevaOrden/NuevaOrden.css" rel="stylesheet" />


<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-1">
        <h1>Orden 001</h1>
    </div>

    <hr />

    <!---->
    <div class="container">
        <div class="mt-5 rounded-3 p-3" style="background-color:#212529; max-width: 800px; margin: 0 auto;">
            <div class="table-responsive mt-1 rounded-3 text-center" style="max-width: 700px; margin: 0 auto;">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Articulo</th>
                            <th scope="col">Marca</th>
                            <th scope="col">Modelo</th>
                            <th scope="col">Cantidad</th>                           
                            <th scope="col">Monto Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Articulo 1</td>
                            <td>Marca 1</td>
                            <td>Modelo 1</td>
                            <td>1</td>                            
                            <td>¢10.000</td>
                        </tr>
                        <tr>
                            <td>Articulo 2</td>
                            <td>Marca 2</td>
                            <td>Modelo 2</td>
                            <td>1</td>                           
                            <td>¢12.687</td>
                        </tr>
                    </tbody>
                </table>
            </div>
           
            <div class="rounded-3">
                <div class="container">                   
                    <div class="row g-3 mt-2">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="moneda">Estado</label>
                                <div class="input-group">
                                    <select id="moneda" class="form-select" style="background-color: #282828; color: #d7d7d7; border: 1px solid #545f71; border-radius: 5px;">
                                        <option>Aprobar</option>
                                        <option>Denegar</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="comentarios">Comentarios del Solicitante</label>
                                <textarea id="comentarios" class="form-control" rows="3" placeholder="Factura se paga en 3 tractos Quincenales" style="background-color: #282828; color: #fff; border: 1px solid #545f71; border-radius: 5px;"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center mt-3">
            <button class="btn  me-2 d-flex align-items-center justify-content-between" @onclick="Cancelar" style="background-color:#eef1f4;">
                Salir <Heroicon Name="XMark" Style="outline" class="small-icon ms-1" />
            </button>
            <button class="btn  d-flex align-items-center justify-content-between" style="background-color:#545f71; color:whitesmoke;">
                Actualizar <Heroicon Name="arrow-path" Style="outline" class="small-icon ms-1" />
            </button>
        </div>

       
    </div>



</div>

<!-- -->
@code {


    private void Cancelar()
    {
        navManager.NavigateTo("/");
    }


}
